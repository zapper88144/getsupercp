# Performance Optimization Configuration

# Enable performance caching
PERFORMANCE_CACHING_ENABLED=true

# Cache driver (redis, database, file, array)
# Redis is recommended for production
CACHE_DRIVER=redis

# Default cache TTL in seconds (1 hour)
CACHE_DEFAULT_TTL=3600

# Database optimization
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD_MS=1000
DB_POOL_SIZE=10
DB_CONNECTION_MAX_LIFETIME=3600

# Memory optimization
MEMORY_MAX_EXECUTION_TIME=300
MEMORY_LIMIT=256M

# Response optimization
RESPONSE_GZIP_ENABLED=true

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true

# Frontend optimization
MINIFY_CSS=true
MINIFY_JAVASCRIPT=true
OPTIMIZE_IMAGES=true
LAZY_LOAD_IMAGES=true

# Service worker caching
SERVICE_WORKER_ENABLED=true
SERVICE_WORKER_CACHE_VERSION=v1

# Development tools (disable in production)
APP_DEBUG=false

# Log performance data
PERFORMANCE_LOG_ENABLED=true
