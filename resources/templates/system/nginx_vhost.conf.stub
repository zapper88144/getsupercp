server {
    listen 80;
    listen [::]:80;
    server_name {{DOMAIN}} {{ALIASES}};
    
    {{SSL_REDIRECT}}

    root {{ROOT}};
    index index.php index.html index.htm;

    {{SSL_CONFIG}}

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php{{PHP_VERSION}}-fpm-{{USER}}.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}
